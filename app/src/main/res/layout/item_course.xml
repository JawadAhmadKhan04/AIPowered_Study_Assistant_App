<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:elevation="2dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@android:color/white">



    <View
        android:id="@+id/top_stroke"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:background="@drawable/form_background"
        android:padding="24dp">


        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/course_title"
                android:layout_width="363dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Introduction to Computer Science"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/bookmark_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="-10dp"
                android:src="@drawable/bookmark"/>
        </LinearLayout>

        <!-- Metadata Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/notes" />

            <TextView
                android:id="@+id/notes_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 notes"
                android:textColor="@color/text_color_gray"
                android:textSize="13sp"
                android:layout_marginEnd="16dp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/timer"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/last_accessed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 days ago"
                android:textColor="@color/text_color_gray"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Action Button -->
        <Button
            android:id="@+id/open_course_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:text="Open Course"
            android:backgroundTint="@color/brightred"
            android:textColor="@color/white"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
